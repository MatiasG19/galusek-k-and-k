---
interface Props {
  title: string;
  text: string;
}

const { title, text } = Astro.props;
---

<div class="m-5 p-5 rounded-md bg-gradient-to-r from-red-800 to-red-700 c">
  <div class="mb-3 text-2xl font-bold">
    {title}
  </div>
  <div class="text-center text-3xl center">
    {text}
  </div>
</div>

<style>
  .c {
    color: white;
    background-color: var(--accent);
    filter: drop-shadow(-3px 2px 6px #99979e);
  }
  .center {
  }
</style>
