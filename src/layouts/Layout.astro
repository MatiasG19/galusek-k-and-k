---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import favicon from "../assets/favicon.svg";
import logo from "../assets/logo.svg";
import "../styles/global.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="de" class="scroll-smooth">
  <head>
    <title>{title}</title>
    <base href={import.meta.env.BASE_URL} />
    <meta charset="UTF-8" />
    <meta name="description" content="Kälte- und Klimatechnik" />
    <meta
      name="keywords"
      content="Kältetechnik, Klimatechnik, Wärmepumpe, Klimanalage, Kühlhaus"
    />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="author" content="MatiasG19" />

    <meta property="og:title" content="Galusek Kälte- und Klimatechnik" />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://www.galusek.de" />
    <meta property="og:image" content={logo.src} />

    <link rel="canonical" href="https://galusek.de/" />
    <link rel="icon" type="image/svg+xml" href={favicon.src} />
  </head>
  <body>
    <div>
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
<style is:global>
  :root {
    --primary: rgb(31, 53, 252);
    --accent: rgb(255, 0, 41);
    --accent-light: 250, 134, 153;
    --accent-dark: 87, 2, 16;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html,
  body {
    height: 100%;
  }
  code {
    font-family:
      Menlo,
      Monaco,
      Lucida Console,
      Liberation Mono,
      DejaVu Sans Mono,
      Bitstream Vera Sans Mono,
      Courier New,
      monospace;
  }
</style>
